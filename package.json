{
  "name": "wrench",
  "version": "0.0.0-dev",
  "private": true,
  "description": ":wrench: Wrench is a toolset that provides various build tools for NodeJS, NPM and related libraries",
  "repository": {
    "type": "git",
    "url": "https://github.com/gavar/wrench"
  },
  "license": "ISC",
  "author": {
    "name": "Max Stankevich",
    "email": "max.stankevich.me@gmail.com",
    "url": "https://github.com/gavar"
  },
  "workspaces": {
    "packages": [
      "@types/*",
      "packages/*",
      "packages/_/*"
    ]
  },
  "scripts": {
    "format:pack": "fixpack && sort-package-json && wsrun -c format:pack",
    "semantic-release": "semantic-release --no-ci",
    "sync:pack": "copycat-pack -r && typesync && yarn && yarn format:pack"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@wrench/commitlint-config"
    ]
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.4",
    "@types/dotenv": "^6.1.1",
    "@types/node": "^12.6.8",
    "dotenv": "^8.0.0",
    "dotenv-expand": "^5.1.0",
    "husky": "^3.0.0",
    "ts-node": "^8.3.0",
    "typescript": "^3.6.0-dev",
    "wsrun": "^5.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "commonDependencies": {
    "colors": "^1.3.0",
    "lodash": "^4.14",
    "slash": "^3.0.0",
    "source-map-support": "^0.5.12",
    "tslib": "^1.10.0",
    "tstt": "^1.0.4"
  }
}
